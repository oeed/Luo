dofile("compile")
dofile("output.lua")
dofile("test")
print("\n")


local small = Small("hola", "aamigo", 3454)
testM("Instance Initialised & __tostring", tostring(small), "instance of 'Small': 0x%x+")
testV("Instance Initialise Called", small.calledInitialise, true)
testV("Instance Initialise Arguments", small.initialiseArgsCount, 3)

testV("Instance Default Value", small.aDefault, "this is a default value")
testF("Instance Value Getting & Setting", function() small.aPlainValue = "Well, well, well!" return small.aPlainValue end, "Well, well, well!")
testF("Instance Setters", function() small.aSetter = "Hello there!" return small.aSetter end, "HELLO THERE!")
testF("Instance Getters", function() small.aGetter = "HELLO THERE!" return small.aGetter end, "hello there!")

testsDone()